rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /reviews/{reviewId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null
        && request.resource.size < 50 * 1024 * 1024;
      allow delete: if request.auth != null;
    }
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
